@model EditShipperVieModel
@{
    ViewData["Title"] = "EditShipper";
}

<h2>Edit Shipper</h2>

<form asp-area="Admin" asp-controller="Admin" asp-action="EditShipper" method="post" class="form-horizontal">
	<div class="form-group">
		<label asp-for="@Model.EditModel.NameOfShipper" class="col-md-2 control-label"></label>
		<div class="col-md-4">
			<input asp-for="@Model.EditModel.NameOfShipper" class="form-control" />
			<span asp-validation-for="@Model.EditModel.NameOfShipper" class="form-text text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="@Model.EditModel.Phone" class="col-md-2 control-label"></label>
		<div class="col-md-4">
			<input asp-for="@Model.EditModel.Phone" class="form-control" />
			<span asp-validation-for="@Model.EditModel.Phone" class="form-text text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button type="submit" class="btn btn-success"> Edit Shipper</button>
		</div>
	</div>
</form>
