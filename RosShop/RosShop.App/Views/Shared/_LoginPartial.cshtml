@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
	<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
		<ul class="nav navbar-nav navbar-right ">
			<li>
				<a asp-area="Admin" asp-controller="ShopingCard" asp-action="ShopingCard">
					<a><i class="fa" style="font-size:18px">&#xf07a;</i></a>
					<span class='badge badge-warning' id='lblCartCount'><p>0</p></span>
				</a>
			</li>
			<li>
				
				<a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User) !</a>
			</li>
			<li>
				<button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
			</li>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li><a asp-area="Admin" asp-controller="ShopingCard" asp-action="ShopingCard"><a><i class="fa" style="font-size:18px">&#xf07a;</i></a>   <span class='badge badge-warning' id='lblCartCount'>0</span></a></li>
		<li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
		<li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
	</ul>
}